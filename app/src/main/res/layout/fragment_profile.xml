<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background_light"
    tools:context="com.example.myselfapp.ui.fragment.ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_title_profile_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            android:text="Detail Profil Saya"
            android:textColor="@color/purple_700"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_profile_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:contentPadding="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title_profile_detail">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_profile_detail_photo"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:contentDescription="Foto Profil Detail"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_default_profile" />

                <TextView
                    android:id="@+id/tv_profile_detail_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:text="Nama Pengguna Lengkap" />

                <TextView
                    android:id="@+id/tv_profile_detail_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:lineSpacingExtra="2dp"
                    android:textColor="@color/text_secondary"
                    android:textSize="16sp"
                    tools:text="Deskripsi panjang tentang diri Anda, latar belakang, dan hal-hal menarik lainnya." />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="24dp"
                    android:background="@color/gray_500" />

                <!-- Interests Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="12dp"
                        android:contentDescription="Interests Icon"
                        android:src="@drawable/ic_interests"
                        app:tint="@color/purple_700" />

                    <TextView
                        android:id="@+id/tv_profile_detail_interests"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:lineSpacingExtra="2dp"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        tools:text="AI, Blockchain, Desain UI/UX, Machine Learning" />

                </LinearLayout>

                <!-- Hobbies Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="12dp"
                        android:contentDescription="Hobbies Icon"
                        android:src="@drawable/ic_hobbies"
                        app:tint="@color/accent_green" />

                    <TextView
                        android:id="@+id/tv_profile_detail_hobbies"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:lineSpacingExtra="2dp"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        tools:text="Ngoding, Membaca, Mendaki, Fotografi" />

                </LinearLayout>

                <!-- Makes Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="12dp"
                        android:contentDescription="Makes Icon"
                        android:src="@drawable/ic_makes"
                        app:tint="@color/accent_blue" />

                    <TextView
                        android:id="@+id/tv_profile_detail_makes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:lineSpacingExtra="2dp"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        tools:text="Aplikasi Android, Website, Kopi Artisan" />

                </LinearLayout>

                <!-- Dreams Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="12dp"
                        android:contentDescription="Dreams Icon"
                        android:src="@drawable/ic_dreams"
                        app:tint="@color/accent_orange" />

                    <TextView
                        android:id="@+id/tv_profile_detail_dreams"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:lineSpacingExtra="2dp"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        tools:text="Jadi Arsitek Solusi, Keliling Dunia, Membuat Startup" />

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btn_about_app"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Tentang Aplikasi"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_profile_detail"
            app:rippleColor="@color/purple_200"
            app:strokeColor="@color/purple_700"/>

        <Button
            android:id="@+id/btn_contact_me"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Kontak Saya"
            app:icon="@drawable/ic_email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_about_app"
            app:rippleColor="@color/purple_200"
            app:strokeColor="@color/purple_700" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>