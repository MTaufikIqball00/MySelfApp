<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.myselfapp.ui.fragment.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_walkthroughFragment"
            app:destination="@id/walkthroughFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/walkthroughFragment"
        android:name="com.example.myselfapp.ui.fragment.WalkthroughFragment"
        android:label="WalkthroughFragment"
        tools:layout="@layout/fragment_walkthrough">
        <action
            android:id="@+id/action_walkthroughFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/walkthroughFragment"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.myselfapp.ui.fragment.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/dailyActivityFragment"
        android:name="com.example.myselfapp.ui.fragment.DailyActivityFragment"
        android:label="Daily Activity"
        tools:layout="@layout/fragment_daily_activity" />

    <fragment
        android:id="@+id/galleryFragment"
        android:name="com.example.myselfapp.ui.fragment.GalleryFragment"
        android:label="Gallery"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/musicFavoriteVideoFragment"
        android:name="com.example.myselfapp.ui.fragment.MusicFavoriteVideoFragment"
        android:label="Music &amp; Video"
        tools:layout="@layout/fragment_music_favorite_video" />

    <fragment
        android:id="@+id/profileDetailFragment"
        android:name="com.example.myselfapp.ui.fragment.ProfileFragment"
        android:label="My Profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/contactFragment"
        android:name="com.example.myselfapp.ui.fragment.ContactFragment"
        android:label="Contact"
        tools:layout="@layout/fragment_contact" />

    <fragment
        android:id="@+id/findMeFragment"
        android:name="com.example.myselfapp.ui.fragment.FindMeFragment"
        android:label="Find Me"
        tools:layout="@layout/fragment_find_me" />

    <dialog
        android:id="@+id/aboutDialogFragment"
        android:name="com.example.myselfapp.ui.fragment.AboutDialogFragment"
        android:label="About"
        tools:layout="@layout/dialog_about" />

</navigation>